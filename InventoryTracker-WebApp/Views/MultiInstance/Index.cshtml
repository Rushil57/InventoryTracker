
@{
    Layout = "";
    ViewBag.Title = "MultiInstance";
    var versionUpdate = System.Configuration.ConfigurationManager.AppSettings["versionKey"];
}

<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Css/Style.css">
    <link rel="stylesheet" href="~/Content/Css/MultiInstance.css" />
    <link rel="stylesheet" href="~/Content/Css/LoginIndex.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    @Html.Partial("_Loader")
    <div class="multi-instance-container" style="margin-top:-50px" id="multi-instance-container">
        <div>
            <button class="btn btn-primary backBtn btn-lg float-start" type="button" id="btnBack">&laquo;</button>
        </div>
        <div class="multi-instance-content">
            <input type="hidden" id="hdnEmail" value="@HttpContext.Current.Session["Email"]" />
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-5">
                    </div>
                    <div class="col-md-7 float-end">
                        <div class="headerLabel">Instances</div>
                        <div class="all-instance-list">
                            <ul id="instanceUL" class="sortableList  overflow-auto"></ul>
                        </div>
                        <div class="all-instance-actions">
                            <div class="float-start">
                                <button class="btn btn-primary" type="button" id="btnCreateInstance">Create</button>
                                <button class="btn btn-danger" type="button" id="btnInstanceRemove">Remove</button>
                            </div>
                            <div class="float-end">
                                <button class="btn btn-primary" type="button" id="btnInstanceLoad">Load</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="headerLabel">Instances Details</div>
                    <textarea class="form-control" name="txtInstance_Notes" id="txtInstance_Notes" cols="70" rows="7" readonly></textarea>
                </div>
            </div>
        </div>
    </div>
    @{
        Html.RenderPartial("_CreateInstance");
    }
    <div class="modal" tabindex="-1" role="dialog" id="deleteConfirmation">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationTitle">Delete Confirmation</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" value="" id="deleteConfirmationId" />
                    Are you sure you want to delete this Instance: <span id="deleteInstanceName"></span> ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning delete-modal">Cancel</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/AppJS/Common/Common.js"></script>
    <script src="~/Scripts/AppJs/MultiInstance/MultiInstance.js?v=@versionUpdate"></script>
</body>