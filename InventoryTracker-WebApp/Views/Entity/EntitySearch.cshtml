@{
    ViewBag.Title = "EntitySearch";
    var versionUpdate = System.Configuration.ConfigurationManager.AppSettings["versionKey"];
}

<link rel="stylesheet" href="~/Content/Css/EquipmentEntityAssignment.css">
<div class="row">
    <div class="col-md-4 ms-5">
        @Html.Partial("_EntityLeftSection")
        @Html.Partial("_SearchScreenButtons")

    </div>
    <div class="col-md-7">
        <h6>
            <input type="hidden" id="entityHDRID" value="0" />
            <select name='entityType' class='dropdown-control' style="display:inline;width:27%" id='entityType' disabled></select>

            <input type="text" class="datepicker dropdown-control float-end" style="display:inline;width:18%" id="mainDate" />
        </h6>
        <div class="border border-color min-vh-10 overflow-hidden mb-2">
            <div class="mr-2 ml-2">
                <table class="table" id="tblTempHDR">
                    <thead style="background-color: #4472c4; color: white; ">
                        <tr>
                            <th scope="col" width="250px">Property Name</th>
                            <th scope="col">Data Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Entity Name</td>
                            <td>
                                <input type="text" class="dropdown-control" style="display:inline;width:40%" id="entityName" disabled />
                                <label style="display:inline;width:40%" id="entityNameLbl" hidden></label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="border border-color min-vh-50 overflow-auto">
            <div class="mr-2 ml-2 ">
                <table class="table" id="tblTemplateDtl">
                    <thead style="background-color: #4472c4; color: white; ">
                        <tr>
                            <th scope="col" width="250px">Property Name</th>
                            <th scope="col">Data Value</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">End Date</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mt-2 float-end">
            <button type="button" class="btn btn-primary" onclick="saveHDRTemplateDtl()">Save</button>
        </div>
        <div class="mt-4">
            <h6>
                Equipment History:
            </h6>
            <div class="border border-color min-vh-20 overflow-auto">
                <div class="mr-2 ml-2 ">
                    <table class="table" id="tblEquipmentHistory">
                        <thead style="background-color: #4472c4; color: white; ">
                            <tr>
                                <th scope="col">Equipment Type</th>
                                <th scope="col">Start Date</th>
                                <th scope="col">End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@*Modal Start*@
@Html.Partial("_EntityCommonModel")
@Html.Partial("_EquipmentTemplateDetail")
@Html.Partial("_CalendarControlSearchModel")
@Html.Partial("_EditEntityEquipmentModel")
@*Model End*@



@Html.Partial("_ImportModel")
@section scripts{
    <script src="~/Scripts/AppJS/Common/Common.js?v=@versionUpdate"></script>
    <script src="~/Scripts/AppJS/Entity/EntityCommon.js?v=@versionUpdate"></script>
    <script src="~/Scripts/AppJS/Entity/EntitySearch.js?v=@versionUpdate"></script>
}

