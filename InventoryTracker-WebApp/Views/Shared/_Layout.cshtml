<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Css/Style.css">
</head>
<body>
    <div class="overlay d-none">
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-danger position-fixed loader" role="status">
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg  fixed-top navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand ms-5" href="#">Inventory Tracker</a>

            <div class="d-flex">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse dropstart navbar-collapse me-5" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @*Home*@
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="@Url.Action("Index","Entity")" id="EntityTemplates">Entity templates</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","Equipment")">Equipment templates</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("EntitySearch","Entity")">Entity search</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("EquipmentSearch","Equipment")">Equipment search</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("EquipmentEntityAssignment","Equipment")">Equipment-Entity Assignment</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("EntityEquipmentAssignment","Entity")">Entity-Equipment Assignment</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>


    <div class="body-content mt-3">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
